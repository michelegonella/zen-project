      </dependency>
      <dependency>
        <groupId>com.nominanuda</groupId>
        <artifactId>zen-urispec</artifactId>
        <version>${zen.version}</version>
      </dependency>
      <dependency>
        <groupId>com.nominanuda</groupId>
        <artifactId>zen-base</artifactId>
        <version>${zen.version}</version>
      </dependency>
      <dependency>
        <groupId>com.nominanuda</groupId>
        <artifactId>zen-dataobject</artifactId>
        <version>${zen.version}</version>
      </dependency>
      <dependency>
        <groupId>com.nominanuda</groupId>
        <artifactId>zen-rhino</artifactId>
        <version>${zen.version}</version>
      </dependency>
      <dependency>
        <groupId>com.nominanuda</groupId>
        <artifactId>zen-webservice</artifactId>
